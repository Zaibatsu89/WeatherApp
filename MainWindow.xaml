<Window
    x:Class="WeatherApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WeatherApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Weather Forecast"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,10"
            FontSize="20"
            FontWeight="Bold"
            Text="Current Weather" />
        <TextBlock
            x:Name="TemperatureTextBlock"
            Grid.Row="1"
            Text="Temperature: " />
        <TextBlock
            x:Name="WindSpeedTextBlock"
            Grid.Row="2"
            Text="Wind Speed: " />
        <TextBlock
            x:Name="WindDirectionTextBlock"
            Grid.Row="3"
            Text="Wind Direction: " />
        <TextBlock
            x:Name="HumidityTextBlock"
            Grid.Row="4"
            Text="Humidity: " />
        <TextBlock
            x:Name="PressureTextBlock"
            Grid.Row="5"
            Text="Pressure: " />
        <TextBlock
            x:Name="CloudinessTextBlock"
            Grid.Row="6"
            Text="Cloudiness: " />
        <TextBlock
            x:Name="DewpointTemperatureTextBlock"
            Grid.Row="7"
            Text="Dewpoint Temperature: " />
        <TextBlock
            x:Name="SymbolTextBlock"
            Grid.Row="8"
            Text="Symbol: " />
        <TextBlock
            x:Name="PrecipitationTextBlock"
            Grid.Row="9"
            Text="Precipitation: " />
        <TextBlock
            x:Name="MinTemperatureTextBlock"
            Grid.Row="10"
            Text="Min Temperature: " />
        <TextBlock
            x:Name="MaxTemperatureTextBlock"
            Grid.Row="11"
            Text="Max Temperature: " />
        <TextBlock
            x:Name="TimeTextBlock"
            Grid.Row="12"
            Text="Time: " />
        <TextBlock
            x:Name="LocationTextBlock"
            Grid.Row="13"
            Text="Location: " />
        <TextBlock
            x:Name="ErrorTextBlock"
            Grid.Row="14"
            Foreground="Red"
            Text="" />
    </Grid>
</Window>