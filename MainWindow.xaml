<Window
    x:Class="WeatherApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:WeatherApp.ViewModels"
    Title="Weather App"
    Width="800"
    Height="550"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Window.DataContext>
        <viewmodels:WeatherViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Offset="0" Color="#2c3e50" />
                <GradientStop Offset="1" Color="#3498db" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Padding="20"
            Background="#1a2530">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{Binding Location}" />
                    <TextBlock
                        FontSize="16"
                        Foreground="#bdc3c7"
                        Text="{Binding CurrentDate, StringFormat='{}{0:dddd, MMMM d, yyyy}'}" />
                </StackPanel>

                <Button
                    Grid.Column="1"
                    Padding="12,8"
                    VerticalAlignment="Center"
                    Background="#3498db"
                    BorderBrush="#2980b9"
                    Command="{Binding RefreshCommand}"
                    Foreground="White"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource BoolToVis}, ConverterParameter=Inverse}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,8,0"
                            FontFamily="Segoe MDL2 Assets"
                            Text="&#xE117;" />
                        <TextBlock Text="Update" />
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!--  Loading Indicator  -->
        <Grid Grid.Row="1" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock
                    Margin="0,0,0,20"
                    FontSize="18"
                    Foreground="White"
                    Text="{Binding StatusMessage}" />
                <ProgressBar
                    Width="200"
                    Height="5"
                    IsIndeterminate="True" />
            </StackPanel>
        </Grid>

        <!--  Weather Content  -->
        <Grid Grid.Row="1" Visibility="{Binding ShowWeatherContent, Converter={StaticResource BoolToVis}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Current Weather Display  -->
            <StackPanel
                Grid.Column="0"
                Margin="20"
                VerticalAlignment="Center">
                <Image
                    Width="150"
                    Height="150"
                    Margin="0,0,0,20"
                    Source="{Binding WeatherIcon}" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="{Binding WeatherDescription}" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="54"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{Binding FormattedTemperature}" />
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    Foreground="#ecf0f1"
                    Text="{Binding FormattedLastUpdated}" />
            </StackPanel>

            <!--  Weather Details  -->
            <Border
                Grid.Column="1"
                Margin="10,20,20,20"
                Padding="20"
                VerticalAlignment="Center"
                Background="#20ffffff"
                CornerRadius="10">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,15"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Weather Details" />

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Width="100"
                            FontSize="16"
                            Foreground="#ecf0f1"
                            Text="Wind:" />
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock
                                FontSize="16"
                                FontWeight="Medium"
                                Foreground="White"
                                Text="{Binding WindDirection}" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Medium"
                                Foreground="White"
                                Text=", " />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Medium"
                                Foreground="White"
                                Text="{Binding FormattedWindSpeed}" />
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Width="100"
                            FontSize="16"
                            Foreground="#ecf0f1"
                            Text="Humidity:" />
                        <TextBlock
                            Grid.Column="1"
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="White"
                            Text="{Binding FormattedHumidity}" />
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Width="100"
                            FontSize="16"
                            Foreground="#ecf0f1"
                            Text="Pressure:" />
                        <TextBlock
                            Grid.Column="1"
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="White"
                            Text="{Binding FormattedPressure}" />
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Width="100"
                            FontSize="16"
                            Foreground="#ecf0f1"
                            Text="Cloudiness:" />
                        <TextBlock
                            Grid.Column="1"
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="White"
                            Text="{Binding FormattedCloudiness}" />
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Width="100"
                            FontSize="16"
                            Foreground="#ecf0f1"
                            Text="Sunrise:" />
                        <TextBlock
                            Grid.Column="1"
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="White"
                            Text="{Binding FormattedSunrise}" />
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Width="100"
                            FontSize="16"
                            Foreground="#ecf0f1"
                            Text="Sunset:" />
                        <TextBlock
                            Grid.Column="1"
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="White"
                            Text="{Binding FormattedSunset}" />
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <!--  Status Bar  -->
        <Border
            Grid.Row="2"
            Padding="10"
            Background="#14212D">
            <TextBlock
                HorizontalAlignment="Center"
                Foreground="#bdc3c7"
                Text="{Binding StatusMessage}" />
        </Border>

        <!--  Footer  -->
        <Border
            Grid.Row="3"
            Padding="10"
            Background="#1a2530">
            <TextBlock
                HorizontalAlignment="Center"
                Foreground="#bdc3c7"
                Text="Data from Norwegian Meteorological Institute API" />
        </Border>
    </Grid>
</Window>